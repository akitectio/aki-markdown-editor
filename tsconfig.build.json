{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "noEmit": false,
        "emitDeclarationOnly": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx",
        "src/examples/**/*"
    ]
}